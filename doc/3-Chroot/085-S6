# Final System: S6 
# Source: https://github.com/skarnet/s6/archive/v2.7.2.2.tar.gz
# This section is done in Chroot environment

./configure  --prefix=/usr \
             --bindir=/bin \
             --with-lib=/usr/lib/skalibs \
             --with-lib=/usr/lib/libexec \
             --with-lib=/usr/lib/execline \
             --with-dynlib=/usr/lib \
             --enabled-shared

make
make install
