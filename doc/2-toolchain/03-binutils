# Tool Chain: Binutils
# Build and install as mlfs

# Set the environment to cross-compile with cross-tools
CC="${MLFS_TARGET}-gcc"
CXX="${MLFS_TARGET}-g++"
AR="${MLFS_TARGET}-ar"
AS="${MLFS_TARGET}-as"
RANLIB="${MLFS_TARGET}-ranlib"
LD="${MLFS_TARGET}-ld"
STRIP="${MLFS_TARGET}-strip"

# Link directories so libraries can be found in both lib & lib64
case $(uname -m) in
        x86_64) ln -sv lib /tools/lib64 ;;
esac

# Configure in dedicated build directory
mkdir -v build && cd build
../configure --prefix=/tools            \
             --with-lib-path=/tools/lib \
             --build=${MLFS_HOST}       \
             --host=${MLFS_TARGET}      \
             --target=${MLFS_TARGET}    \
             --disable-nls              \
             --disable-werror           \
             --with-sysroot
# Build
make

# Install
make install

# Build and install linker that will be used later 
# after adjusting toolchain
make -C ld clean
make -C ld LIB_PATH=/usr/lib:/lib 
cp -v ld/ld-new /tools/bin

